{
  "manifest_version": 2,
  "name": "Earthquake Screen",
  "version": "1.0",
  "description": "Simulates an earthquake effect inside your browser.",
  "icons": {
    "48": "icons/eqicon.png"
  },
  "browser_action": {
    "default_icon": "icons/eqicon.png",
    "default_title": "Toggle Earthquake"
  },
  "permissions": ["activeTab", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["earthquake.js"]
    }
  ]
}
